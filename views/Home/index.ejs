<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Loja MoveNation</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600&display=fallback">
  <!-- Font Awesome -->
  <link href="/css/fontawesome-free/css/all.min.css" rel="stylesheet">
  <!-- Theme style (AdminLTE + Bootstrap) -->
  <link rel="stylesheet" href="/css/adminlte.min.css">

  <style>
    body {
      font-family: 'Source Sans Pro', sans-serif;
      background-color: #f8f9fa;
    }

    .navbar-brand {
      font-weight: 600;
    }

    footer {
      background-color: #343a40;
      color: white;
      padding: 20px 0;
      margin-top: 40px;
    }

    footer a {
      color: #ffc107;
    }

    .card img {
      height: 250px;
      object-fit: cover;
    }
  </style>
</head>

<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">MoveNation</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          
          
            <a href="/carrinho" class="btn btn-warning">
              <i class="fas fa-shopping-cart"></i> Ver Carrinho
            </a>
         
          <li class="nav-item"><a class="nav-link" href="/carrinho"></a></li>
        </ul>
        <a href="/produto" class="btn btn-outline-warning">
          <i class="fas fa-sign-in-alt"></i> Login
        </a>
      </div>
    </div>
  </nav>

  <!-- CONTE√öDO -->
  <div class="container mt-5">
    <h1 class="mb-4">Produtos da Loja</h1>

   

    <div class="row">
      <% produtos.map(function(value) { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <img src="<%= value.produtoImagem %>" class="card-img-top" alt="<%= value.produtoNome %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= value.produtoNome %></h5>
              <p class="card-text"><strong>C√≥digo:</strong> <%= value.produtoCodigo %></p>
              <p class="card-text"><strong>Categoria:</strong> <%= value.categoriaNome %></p>
              <p class="card-text"><strong>Marca:</strong> <%= value.marcaNome %></p>
              <p class="card-text"><strong>Estoque:</strong> <%= value.produtoQuantidade %></p>
              <p class="card-text"><strong>Pre√ßo:</strong> R$ <%= Number(value.produtoValor).toFixed(2) %></p>
              <button class="btn btn-success mt-auto btnCarrinho" data-produto='<%- JSON.stringify(value) %>'>
                <i class="fas fa-cart-plus"></i> Adicionar ao carrinho
              </button>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- FOOTER -->
  <footer class="text-center">
    <div class="container">
      <p class="mb-0">¬© <%= new Date().getFullYear() %> MoveNation. Todos os direitos reservados.</p>
      <small>Feito com üí™ e ‚ù§Ô∏è por MoveNation</small>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="/js/jquery/jquery.min.js"></script>
  <script src="/js/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/js/adminlte.min.js"></script>
  <script src="/js/Produto/loja.js"></script>
</body>
</html>
